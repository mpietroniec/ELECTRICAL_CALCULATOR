<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_row="0"
    android:layout_rowWeight="1"
    android:layout_column="0"
    android:layout_columnWeight="1"
    android:layout_marginBottom="1dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp">

        <TextView
            android:id="@+id/txt_voltage_drop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Voltage drop:"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_voltage_drop_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_toEndOf="@+id/txt_voltage_drop"
            android:hint="-"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5sp"
            android:layout_toEndOf="@+id/txt_voltage_drop_value"
            android:text="%"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/txt_voltage_drop_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_voltage_drop"
            android:clickable="true"
            android:focusable="true"
            android:text="@string/details"
            android:textSize="18sp"
            app:drawableEndCompat="@drawable/ic_baseline_arrow_right_26" />

        <ImageView
            android:id="@+id/iv_delete_voltage_drop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="20dp"
            android:clickable="true"
            android:focusable="true"
            android:src="@drawable/ic_baseline_delete_26" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>